    private void AdjustTimerInterval()
    {
        int activeCount = activeQuestions.Values.Count(q => q != null);

        double newInterval;

        if (activeCount == 0)
            newInterval = 1000;
        else if (activeCount == 1)
            newInterval = 1500;
        else if (activeCount == 2)
